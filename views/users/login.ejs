<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow">
        <img 
            alt=""
            class="card-image-top"
            src="https://images.unsplash.com/photo-1595427138638-191b66fa7479?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=400&h=275">
        <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form action="/login" method="POST" class="validated-form p-2" novalidate>
                <div class="form-group row">
                    <label for="username" class="col-form-label">Username</label>
                    <div class="mb-2 col-12">
                        <input type="text" class="form-control" name="username" id="username" autofocus required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label for="password" class="col-form-label">Password</label>
                    <div class="mb-3 col-12">
                        <input type="password" class="form-control" id="password" name="password" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-group row mb-3">
                    <button type="submit" class="btn btn-success w-100">Sign in</button>
                </div>
            </form>
            <p>Not a member? <a href="/register">Register</a></p>
        </div>
    </div>
</div>