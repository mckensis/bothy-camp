<% layout('layouts/boilerplate') %>

<div class="container d-flex justify-content-center align-items-center">
    <div class="card shadow">
        <img 
            alt=""
            class="card-image-top"
            src="https://images.unsplash.com/photo-1595427138638-191b66fa7479?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=400&h=275">
        <div class="card-body">
            <h5 class="card-title">Register</h5>
            <form action="/register" method="POST" class="validated-form p-2" novalidate>
                <div class="form-group row">
                    <label class="col-form-label" for="username">Username</label>
                    <div class="mb-2 col-12">
                        <input class="form-control" type="text" id="username" name="username" autofocus required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label" for="email">Email</label>
                    <div class="mb-2 col-12">
                        <input class="form-control" type="email" id="email" name="email" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-form-label" for="password">Password</label>
                    <div class="mb-3 col-12">
                        <input class="form-control" type="password" id="password" name="password" required>
                        <div class="valid-feedback">Looks good!</div>
                    </div>
                </div>
                <div class="form-group row">
                    <button type="submit" class="btn btn-success btn-block">Register</button>
                </div>
            </form>
        </div>
    </div>
</div>